<div class="card">
  <%= form_with(model: music) do |form| %>
  <div class="card-body">
    <% if music.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(music.errors.count, "error") %> prohibited this music from being saved:</h2>

        <ul>
          <% music.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: 'form-label'  %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :author, class: 'form-label'  %>
      <%= form.text_field :author, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :lyrics, class: 'form-label'  %>
      <%= form.text_area :lyrics, rows: 10,class: 'form-control' %>
      <br />
      <button type="button" data-target="#music_lyrics" class="btn btn-secondary musics-btn-fetch-lyrics">Buscar letra</button>
    </div>
  </div>
  <div class="card-footer">
    <%= form.submit('Salvar', class: "btn btn-primary ms-auto") %>
  </div>
  <% end %>
</div>