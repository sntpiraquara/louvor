
<div class="container-tight">
  <div class="text-center mb-4">
    <h1 class="navbar-brand navbar-brand-autodark">Louvor</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => {:class => "card card-md"}) do |f| %>
    <div class="card-body">   
      <%= render "template/alerts" %>

      <h2 class="card-title text-center mb-4"><%= t('.forgot_your_password') %></h2>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary w-100' %>
      </div>
    </div>
  <% end %>

  <div class="text-center text-muted mt-3">
    <%= render 'devise/shared/links' %>
  </div>
</div>