<div class="container-xl">
    <div class="page-header d-print-none">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">Repertórios</h2>
            </div>
            <div class="col-12 col-md-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a href="<%= new_repertory_path %>" class="btn btn-primary d-none d-sm-inline-block">
                    <!-- Download SVG icon from http://tabler-icons.io/i/plus -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        Novo Repertório
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <%= render 'template/alerts' %>

        <div class="row">
            <% @repertories.each do |repertory| %>
                <div class="col-lg-3 col-sm-4">
                    <div class="card mb-3">
                        <div class="card-header">
                            <h3 class="m-0 mb-1">
                                <a href="<%= repertory_path(repertory) %>"><%= repertory.name %></a>
                            </h3>
                        </div>
                        <div class="card-body text-center">
                            <span><%= repertory.musics.count %> músicas</span>
                            <br />
                            <a href="<%= repertory_path(repertory)%>/share" target="_blank" class="btn btn-info"><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-share" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
   <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
   <circle cx="6" cy="12" r="3"></circle>
   <circle cx="18" cy="6" r="3"></circle>
   <circle cx="18" cy="18" r="3"></circle>
   <line x1="8.7" y1="10.7" x2="15.3" y2="7.3"></line>
   <line x1="8.7" y1="13.3" x2="15.3" y2="16.7"></line>
</svg> Compartilhar Repertório</a>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>